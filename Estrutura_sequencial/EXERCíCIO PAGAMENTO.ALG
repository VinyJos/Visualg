Algoritmo "Exercício Pagamento"


Var
Nome : caractere
valorHora, pagamento: real
horas: inteiro


Inicio

   escreva ("Nome: ")
   leia(Nome)
   escreva ("Valor por hora: ")
   leia(valorHora)
   escreva ("Horas trabalhadas: ")
   leia(horas)
   
   pagamento<- valorHora * horas
   escreval ("O pagamento para " ,Nome, " deve ser R$",pagamento)
  

  


Fimalgoritmo